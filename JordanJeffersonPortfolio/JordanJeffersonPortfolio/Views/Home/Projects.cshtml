@model ProjectViewModel;

<div class="row">
<h2 class="aboutTitle">Web Applications</h2>
@foreach (Project p in Model.WebApps)
{
    <div class="column">
        <a href="@p.Link" target="_blank">
            <div class="card">
                <h3>@p.Name</h3>
                <img src="@p.Image" id="cardPhoto"/>
                <p>@p.Description</p>
            </div>
        </a>
        <div class="desc">
            <p class="descText">@p.FrameWork</p>
        </div>
    </div>
}
<div class="column">
    <a asp-action="Index">
        <div class="card">
            <h3>Portfolio</h3>
            <img src="../images/jordan.jpg" id="cardPhoto"/>
            <p>My personal portfolio website.</p>
        </div>
    </a>
    <div class="desc">
        <p class="descText">ASP.NET MVC</p>
    </div>
</div>
    <div class="space"></div>
</div>
<div class="row">

<h2 class="aboutTitle">Console Applications</h2>
@foreach (Project p in Model.ConsoleApps)
{
    <div class="column">
                <div class="card">
                    <h3>@p.Name</h3>
                    <img src="@p.Image" id="cardPhoto"/>
                    <p>@p.Description</p>
                </div>
            <div class="console">
                <button class="consolebtn" onclick="location.href='@Url.Action("DownloadPig","Project")'">Download</button>
            </div>
    </div>
}
</div>
<div class="space"></div>

<div class="row">

    <h2 class="aboutTitle">WPF Applications</h2>
    @foreach (Project p in Model.WPFApps)
    {
        <div class="column">
            <div class="card">
                <h3>@p.Name</h3>
                <img src="@p.Image" id="cardPhoto" />
                <p>@p.Description</p>
            </div>
            <div class="console">
                <button class="consolebtn" disabled>Download</button>
            </div>
        </div>
    }
</div>
<div class="space"></div>

<div class="buttonContainer">
    <a href="https://github.com/jemjefferson" target="_blank"><button id="projectsButton">Source Code</button></a>
</div>