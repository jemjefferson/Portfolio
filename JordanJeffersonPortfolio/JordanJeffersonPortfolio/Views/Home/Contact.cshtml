@model Email
<div>
    <div>
        <form method="post" asp-action="SendEmail" class="portfolioForm" id="form">
            <h2>Contact</h2>
            <div class="form-group">
                <label asp-for="UserEmail"></label>
                <input asp-for="UserEmail" />
                <span asp-validation-for="UserEmail"></span>
            </div>
            <div class="form-group">
                <label asp-for="Subject"></label>
                <input asp-for="Subject" />
                <span asp-validation-for="Subject"></span>
            </div>
            <div class="form-group" id="formMessage">
                <label asp-for="Message"></label>
                <textarea rows="8" asp-for="Message"></textarea>
                <span asp-validation-for="Message"></span>
            </div>
            <div asp-validation-summary="All"></div>

            <button type="submit" id="submitButton">Submit</button>
        </form>
    </div>
</div>